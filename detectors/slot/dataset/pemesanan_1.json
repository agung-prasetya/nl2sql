{
  "entitas": {
    "pelanggan": {
      "id_pelanggan": "primary key",
      "nama": "varchar(100)",
      "email": "varchar(100)",
      "no_hp": "varchar(20)",
      "alamat": "varchar(255)"
    },
    "produk": {
      "id_produk": "primary key",
      "nama_produk": "varchar(100)",
      "harga": "decimal",
      "stok": "integer",
      "deskripsi": "text"
    },
    "pesanan": {
      "id_pesanan": "primary key",
      "id_pelanggan": "foreign key references pelanggan(id_pelanggan)",
      "tanggal_pesan": "date",
      "status": "varchar(50)",
      "total_bayar": "decimal"
    },
    "detail_pesanan": {
      "id_detail": "primary key",
      "id_pesanan": "foreign key references pesanan(id_pesanan)",
      "id_produk": "foreign key references produk(id_produk)",
      "kuantitas": "integer",
      "harga_satuan": "decimal",
      "subtotal": "decimal"
    },
    "pembayaran": {
      "id_pembayaran": "primary key",
      "id_pesanan": "foreign key references pesanan(id_pesanan)",
      "metode": "varchar(50)",
      "status_pembayaran": "varchar(50)",
      "tanggal_pembayaran": "date"
    },
    "pengiriman": {
      "id_pengiriman": "primary key",
      "id_pesanan": "foreign key references pesanan(id_pesanan)",
      "jasa_kurir": "varchar(100)",
      "no_resi": "varchar(100)",
      "status_pengiriman": "varchar(50)",
      "tanggal_kirim": "date",
      "tanggal_terima": "date"
    }
  }
}
