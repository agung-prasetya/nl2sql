{
  "entitas": {
    "pelanggan": {
      "id_pelanggan": "primary key",
      "nama": "varchar(100)",
      "no_hp": "varchar(20)",
      "alamat": "varchar(255)"
    },
    "kasir": {
      "id_kasir": "primary key",
      "nama": "varchar(100)",
      "username": "varchar(50)",
      "password": "varchar(50)"
    },
    "supplier": {
      "id_supplier": "primary key",
      "nama": "varchar(100)",
      "kontak": "varchar(20)",
      "alamat": "varchar(255)"
    },
    "kategori": {
      "id_kategori": "primary key",
      "nama_kategori": "varchar(100)"
    },
    "produk": {
      "id_produk": "primary key",
      "nama_produk": "varchar(100)",
      "harga": "decimal",
      "stok": "integer",
      "id_kategori": "foreign key references kategori(id_kategori)",
      "id_supplier": "foreign key references supplier(id_supplier)"
    },
    "penjualan": {
      "id_penjualan": "primary key",
      "id_pelanggan": "foreign key references pelanggan(id_pelanggan)",
      "id_kasir": "foreign key references kasir(id_kasir)",
      "tanggal_penjualan": "date",
      "total": "decimal"
    },
    "detail_penjualan": {
      "id_detail": "primary key",
      "id_penjualan": "foreign key references penjualan(id_penjualan)",
      "id_produk": "foreign key references produk(id_produk)",
      "jumlah": "integer",
      "harga_satuan": "decimal",
      "subtotal": "decimal"
    },
    "pembayaran": {
      "id_pembayaran": "primary key",
      "id_penjualan": "foreign key references penjualan(id_penjualan)",
      "metode": "varchar(50)",
      "jumlah_bayar": "decimal",
      "tanggal_bayar": "date",
      "status": "varchar(20)"
    }
  }
}
