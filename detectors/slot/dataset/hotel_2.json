{
  "entitas": {
    "tamu": {
      "id_tamu": "primary key",
      "nama": "varchar(100)",
      "email": "varchar(100)",
      "telepon": "varchar(20)",
      "alamat": "varchar(255)"
    },
    "pegawai": {
      "id_pegawai": "primary key",
      "nama": "varchar(100)",
      "jabatan": "varchar(50)",
      "email": "varchar(100)",
      "telepon": "varchar(20)"
    },
    "kamar": {
      "id_kamar": "primary key",
      "nomor_kamar": "varchar(10)",
      "lantai": "integer",
      "id_tipe_kamar": "foreign key references tipe_kamar(id_tipe_kamar)",
      "status": "varchar(20)",
      "harga_per_malam": "decimal(12,2)"
    },
    "tipe_kamar": {
      "id_tipe_kamar": "primary key",
      "nama_tipe": "varchar(50)",
      "kapasitas": "integer",
      "deskripsi": "text"
    },
    "reservasi": {
      "id_reservasi": "primary key",
      "id_tamu": "foreign key references tamu(id_tamu)",
      "id_pegawai": "foreign key references pegawai(id_pegawai)",
      "tanggal_reservasi": "date",
      "tanggal_checkin": "date",
      "tanggal_checkout": "date",
      "status": "varchar(20)"
    },
    "detail_reservasi": {
      "id_reservasi": "foreign key references reservasi(id_reservasi)",
      "id_kamar": "foreign key references kamar(id_kamar)",
      "primary_key": "id_reservasi, id_kamar"
    },
    "pembayaran": {
      "id_pembayaran": "primary key",
      "id_reservasi": "foreign key references reservasi(id_reservasi)",
      "tanggal_pembayaran": "date",
      "total": "decimal(12,2)",
      "metode": "varchar(50)",
      "status": "varchar(20)"
    },
    "layanan": {
      "id_layanan": "primary key",
      "nama_layanan": "varchar(100)",
      "biaya": "decimal(12,2)",
      "deskripsi": "text"
    },
    "penggunaan_layanan": {
      "id_penggunaan": "primary key",
      "id_reservasi": "foreign key references reservasi(id_reservasi)",
      "id_layanan": "foreign key references layanan(id_layanan)",
      "tanggal": "date",
      "jumlah": "integer"
    },
    "ulasan": {
      "id_ulasan": "primary key",
      "id_tamu": "foreign key references tamu(id_tamu)",
      "id_reservasi": "foreign key references reservasi(id_reservasi)",
      "rating": "integer",
      "komentar": "text",
      "tanggal_ulasan": "date"
    }
  }
}
