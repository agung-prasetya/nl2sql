{
  "entitas": {
    "pegawai": {
      "id_pegawai": "PRIMARY KEY",
      "nama": "VARCHAR(100)",
      "tanggal_lahir": "DATE",
      "alamat": "TEXT",
      "telepon": "VARCHAR(20)",
      "email": "VARCHAR(100)",
      "id_jabatan": "FOREIGN KEY REFERENCES jabatan(id_jabatan)",
      "id_departemen": "FOREIGN KEY REFERENCES departemen(id_departemen)"
    },
    "jabatan": {
      "id_jabatan": "PRIMARY KEY",
      "nama_jabatan": "VARCHAR(100)",
      "gaji_pokok": "DECIMAL(10,2)",
      "tunjangan": "DECIMAL(10,2)"
    },
    "departemen": {
      "id_departemen": "PRIMARY KEY",
      "nama_departemen": "VARCHAR(100)",
      "lokasi": "VARCHAR(100)"
    },
    "absensi": {
      "id_absensi": "PRIMARY KEY",
      "id_pegawai": "FOREIGN KEY REFERENCES pegawai(id_pegawai)",
      "tanggal": "DATE",
      "jam_masuk": "TIME",
      "jam_keluar": "TIME",
      "status": "VARCHAR(20)"
    },
    "gaji": {
      "id_gaji": "PRIMARY KEY",
      "id_pegawai": "FOREIGN KEY REFERENCES pegawai(id_pegawai)",
      "tanggal_gaji": "DATE",
      "total_gaji": "DECIMAL(10,2)",
      "potongan": "DECIMAL(10,2)",
      "keterangan": "TEXT"
    },
    "riwayat_jabatan": {
      "id_riwayat": "PRIMARY KEY",
      "id_pegawai": "FOREIGN KEY REFERENCES pegawai(id_pegawai)",
      "id_jabatan": "FOREIGN KEY REFERENCES jabatan(id_jabatan)",
      "mulai_jabatan": "DATE",
      "akhir_jabatan": "DATE"
    }
  }
}
